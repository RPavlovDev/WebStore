@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>New User Signup!</h2>
                        <form method="post" asp-controller="Account" asp-action="Register" asp-antiforgery="true">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div>
                                <input asp-for="@Model.Name" placeholder="@nameof(Model.Name)" />
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="@Model.Email" placeholder="@nameof(Model.Email)" />
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="@Model.Password" placeholder="@nameof(Model.Password)" />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="@Model.PasswordConfirm" placeholder="@nameof(Model.PasswordConfirm)" />
                                <span asp-validation-for="@Model.PasswordConfirm" class="text-danger"></span>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-default">Signup</button>
                            </div>
                        </form>
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
</div>