@model IEnumerable<WebStore.Domain.Entities.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h3>Сотрудники</h3>

    <hr />

    <a asp-action="Edit" class="btn btn-primary">Create</a>
    <a asp-action="Create" class="btn btn-primary">Create2</a>

    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-Id="@employee.Id">@employee.Id</a>
                    </td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-Id="@employee.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-Id="@employee.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp asp-action="Index">Домой</a>
    </p>

</div>

